            <button class="action-btn" onclick="startRealGeneration()">
                <i class="fas fa-bolt"></i> GÉNÉRER LE CODE
            </button>

            <!-- Terminal de logs -->
            <div id="terminal" class="terminal-window"></div>

            <!-- Zone de résultat -->
            <div id="result-area" class="result-area">
                <h3 style="color:var(--primary); margin-bottom:10px;">Génération Terminée !</h3>
                <p style="color:#aaa; font-size:0.9rem;">Votre code source est prêt ci-dessous.</p>
                <button class="btn-copy" onclick="copyCode()">
                    <i class="fas fa-copy"></i> COPIER LE CODE

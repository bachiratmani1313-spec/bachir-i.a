    <script>
        // État de l'application
        let currentMode = 'app'; // app, site, video

        // Elements DOM
        const terminal = document.getElementById('terminal');
        const resultArea = document.getElementById('result-area');

        // Fonction pour changer de mode
        function setMode(mode) {
            currentMode = mode;
            
            // UI Update
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            event.currentTarget.classList.add('active');
            
            // Reset UI
            resultArea.style.display = 'none';
            terminal.style.display = 'none';
            terminal.innerHTML = '';
        }

        // FONCTION PRINCIPALE : Génération Réelle avec IA
        async function startRealGeneration() {
            const apiKey = document.getElementById('api-key-input').value;
            const projectName = document.getElementById('project-name').value; // Récupération du nom
            const prompt = document.getElementById('prompt-input').value;

            // 1. Validation
            if (!apiKey) {
                showToast("Veuillez entrer votre clé API OpenAI !");
                return;
            }
            if (!prompt) {
                showToast("Veuillez décrire votre projet.");
                return;
            }
            
            // Nom par défaut si vide
            const finalName = projectName || "MonProjet";

            // 2. Préparation UI
            terminal.style.display = 'block';
            terminal.style.color = 'var(--success)';
            terminal.innerText = `> Initialisation du projet : ${finalName}...\n> Connexion au serveur neuronal...\n> Analyse de la demande...\n`;
            resultArea.style.display = 'none';

            try {
                // 3. Construction du Prompt System intelligent
                let systemPrompt = "";
                
                if(currentMode === 'app') {
                    systemPrompt = `Tu es un expert en développement mobile (React Native / Flutter). Ton but est de générer le code source complet pour une APPLICATION MOBILE nommée "${finalName}".`;
                } else if(currentMode === 'site') {
                    systemPrompt = `Tu es un expert Frontend. Ton but est de générer le code HTML et CSS complet pour un SITE WEB nommé "${finalName}".`;
                } else if(currentMode === 'video') {
                    systemPrompt = `Tu es un expert en marketing viral. Ton but est de créer un script détaillé pour une VIDÉO TIKTOK/SHORTS nommée "${finalName}".`;
                }

                systemPrompt += " Inclue des commentaires détaillés dans le code. Voici la description de l'utilisateur : ";

                // 4. Appel API
                const response = await fetch('https://api.openai.com/v1/chat/completions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${apiKey}`
                    },
                    body: JSON.stringify({
                        model: "gpt-3.5-turbo", // Utilise gpt-4 si votre clé le permet
                        messages: [
                            { role: "system", content: systemPrompt },
                            { role: "user", content: prompt }
                        ],
                        max_tokens: 2000 // Assez de place pour un bon bout de code
                    })
                });

                const data = await response.json();

                // 5. Gestion des résultats
                if (data.error) {
                    terminal.innerText = "ERREUR API : " + data.error.message + "\nVérifiez votre clé ou votre crédit.";
                    terminal.style.color = "red";
                } else {
                    const aiContent = data.choices[0].message.content;
                    
                    // Effacer les logs de connexion et afficher le vrai code
                    terminal.innerText = "";
                    typeWriterEffect(aiContent);
                }

            } catch (error) {
                terminal.innerText = "Erreur de connexion réseau : " + error.message;
                terminal.style.color = "red";
            }
        }

        // Effet Machine à écrire pour le code
        function typeWriterEffect(text) {
            let i = 0;
            const speed = 2; // Rapide
            
            function type() {
                if (i < text.length) {
                    terminal.innerText += text.charAt(i);
                    terminal.scrollTop = terminal.scrollHeight; // Scroll auto vers le bas
                    i++;
                    setTimeout(type, speed);
                } else {
                    resultArea.style.display = 'block';
                }
            }
            type();
        }

        // Copier le code
        function copyCode() {
            const text = terminal.innerText;
            if(text && !text.includes("ERREUR")) {
                navigator.clipboard.writeText(text).then(() => {
                    showToast("Code source copié !");
                });
            }
        }

        // Gestion Modal
        function closeModal() {
            document.getElementById('subscription-modal').classList.remove('active');
        }

        // Toast
        function showToast(msg) {
            const t = document.getElementById('toast');
            t.innerText = msg;
            t.style.display = 'block';
            setTimeout(() => t.style.display = 'none', 3000);
        }
    </script>
</body>
